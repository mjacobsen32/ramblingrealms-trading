{
    "name": "ppo",
    "description": "A generic ppo trading algorithm configuration.",
    "version": "1.0",
    "log_dir": "{PROJECT_ROOT}/logs/",
    "data_config": {
        "start_date": "2020-01-01",
        "end_date": "2025-06-05",
        "time_step_unit": "Day",
        "time_step_period": 1,
        "cache_path": "{PROJECT_ROOT}/data",
        "cache_enabled": true,
        "requests": [
            {
                "dataset_name": "SP10_daily_5_years",
                "source": "alpaca",
                "endpoint": "StockBarsRequest",
                "kwargs": {
                    "symbol_or_symbols": ["AAPL", "MSFT", "NVDA", "AMZN", "META", "NFLX", "TSLA", "AVGO", "WMT", "JPM"]
                }
            }
        ]
    },
    "feature_config": {
        "features": [
            {
                "type": "candle",
                "name": "candle",
                "source": "SP10_daily_5_years",
                "enabled": true
            },
            {
                "type": "moving_window",
                "name": "ma100_close",
                "source": "SP10_daily_5_years",
                "enabled": true,
                "field": "close",
                "period": 100
            },
            {
                "type": "moving_window",
                "name": "ma50_close",
                "source": "SP10_daily_5_years",
                "enabled": true,
                "field": "close",
                "period": 50
            },
            {
                "type": "moving_window",
                "name": "ma100_volume",
                "source": "SP10_daily_5_years",
                "enabled": true,
                "field": "volume",
                "period": 100
            },
            {
                "type": "moving_window",
                "name": "volatility100",
                "source": "SP10_daily_5_years",
                "enabled": true,
                "field": "close",
                "period": 100,
                "operation": "std"
            },
            {
                "type": "macd",
                "name": "macd_small",
                "source": "SP10_daily_5_years",
                "enabled": true,
                "fast_period": 12,
                "slow_period": 26,
                "signal_period": 9,
                "field": "close"
            },
            {
                "type": "rsi",
                "name": "rsi_15",
                "source": "SP10_daily_5_years",
                "period": 15,
                "field": "close"
            },
            {
                "type": "rsi",
                "name": "rsi_60",
                "source": "SP10_daily_5_years",
                "period": 60,
                "field": "close"
            },
            {
                "type": "bollinger_bands",
                "name": "bollinger_bands_20",
                "source": "SP10_daily_5_years",
                "period": 20,
                "field": "close"
            },
            {
                "type": "stochastic",
                "name": "stochastic_20",
                "source": "SP10_daily_5_years",
                "period": 20
            },
            {
                "type": "turbulence",
                "name": "turbulence",
                "source": "SP10_daily_5_years",
                "lookback": 252
            }
        ]
    }
}
{
    "name": "ppo",
    "description": "A generic ppo trading algorithm configuration.",
    "version": "1.0",
    "log_dir": "{PROJECT_ROOT}/logs/",
    "agent_config": {
        "algo": "ppo",
        "save_path": "{PROJECT_ROOT}/models/ppo",
            "kwargs": {
                "policy": "MlpPolicy",
                "learning_rate": 0.0003,
                "n_steps": 10000,
                "batch_size": 64,
                "n_epochs": 10,
                "gamma": 0.99,
                "gae_lambda": 0.95,
                "ent_coef": 0.01,
                "clip_range": 0.2,
                "vf_coef": 0.5,
                "max_grad_norm": 0.5,
                "use_sde": false,
                "sde_sample_freq": -1,
                "device": "cpu"
        }
    },
    "data_config": {
        "start_date": "1995-06-05",
        "end_date": "2025-06-05",
        "time_step_unit": "Day",
        "time_step_period": 1,
        "cache_path": "{PROJECT_ROOT}/data",
        "cache_enabled": true,
        "requests": [
            {
                "dataset_name": "AAPL_30_years",
                "source": "alpaca",
                "endpoint": "StockBarsRequest",
                "kwargs": {
                    "symbol_or_symbols": ["AAPL"],
                    "adjustment": "split"
                }
            }
        ]
    },
    "feature_config": {
        "features": [
            {
                "type": "candle",
                "name": "candle",
                "source": "AAPL_30_years",
                "enabled": true
            },
            {
                "type": "moving_window",
                "name": "ma100_close",
                "source": "AAPL_30_years",
                "enabled": true,
                "field": "close",
                "period": 100
            },
            {
                "type": "moving_window",
                "name": "ma50_close",
                "source": "AAPL_30_years",
                "enabled": true,
                "field": "close",
                "period": 50
            },
            {
                "type": "moving_window",
                "name": "ma100_volume",
                "source": "AAPL_30_years",
                "enabled": true,
                "field": "volume",
                "period": 100
            },
            {
                "type": "moving_window",
                "name": "volatility100",
                "source": "AAPL_30_years",
                "enabled": true,
                "field": "close",
                "period": 100,
                "operation": "std"
            },
            {
                "type": "macd",
                "name": "macd_small",
                "source": "AAPL_30_years",
                "enabled": true,
                "fast_period": 12,
                "slow_period": 26,
                "signal_period": 9,
                "field": "close"
            },
            {
                "type": "rsi",
                "name": "rsi_15",
                "source": "AAPL_30_years",
                "period": 15,
                "field": "close"
            },
            {
                "type": "rsi",
                "name": "rsi_60",
                "source": "AAPL_30_years",
                "period": 60,
                "field": "close"
            },
            {
                "type": "bollinger_bands",
                "name": "bollinger_bands_20",
                "source": "AAPL_30_years",
                "period": 20,
                "field": "close"
            },
            {
                "type": "stochastic",
                "name": "stochastic_20",
                "source": "AAPL_30_years",
                "period": 20
            },
            {
                "type": "turbulence",
                "name": "turbulence",
                "source": "AAPL_30_years",
                "lookback": 252
            }
        ]
    }
}